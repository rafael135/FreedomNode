<Project Sdk="Microsoft.NET.Sdk.Worker">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>dotnet-FalconNode-4003f84b-2498-48de-adac-8d5a86f405fe</UserSecretsId>
    <!-- Avoid generating TargetFrameworkAttribute automatically to prevent duplicate attribute issues across builds
      (this is a temporary workaround for local test builds; consider a permanent fix in CI or project layout). -->
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <!-- Assembly attributes are generated by the SDK (default). Avoid manual changes here to keep solution builds canonical. -->
    <TieredCompilationQuickJit>false</TieredCompilationQuickJit>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <PublishTrimmed>false</PublishTrimmed>
    <TrimMode>partial</TrimMode>
    <SuppressTrimAnalysisWarnings>false</SuppressTrimAnalysisWarnings>

    <PublishSingleFile>true</PublishSingleFile>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MemoryPack" Version="1.21.4" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="10.0.0" />
    <PackageReference Include="NSec.Cryptography" Version="25.4.0" />
    <PackageReference Include="System.IO.Hashing" Version="10.0.1" />
  </ItemGroup>

  <!-- Exclude test files (tests/) from default SDK globbing so the main app doesn't compile test code
       into the production assembly. This prevents duplicate/ambiguous assembly attributes and missing test-only
       package references when tests are built alongside the app. -->
  <ItemGroup>
    <Compile Remove="tests\**\*.cs" />
    <None Remove="tests\**\*" />
    <EmbeddedResource Remove="tests\**\*" />
  </ItemGroup>

  <PropertyGroup>
    <NativeLibPrefix>lib</NativeLibPrefix>
    <NativeLibExt>.so</NativeLibExt>
    
    <NativeLibExt Condition="$([MSBuild]::IsOSPlatform('OSX'))">.dylib</NativeLibExt>

    <NativeLibPrefix Condition="$([MSBuild]::IsOSPlatform('Windows'))"></NativeLibPrefix>
    <NativeLibExt Condition="$([MSBuild]::IsOSPlatform('Windows'))">.dll</NativeLibExt>
    
    <RustProjectDir>native/freedom_core</RustProjectDir>
  </PropertyGroup>

  <Target Name="BuildRustLib" BeforeTargets="Build">
    <Message Importance="high" Text="=== Compiling Rust library (freedom_core) in Release mode... ===" />
    <Exec Command="cargo build --release --manifest-path $(RustProjectDir)/Cargo.toml" />
  </Target>

  <ItemGroup>
    <RustBinary Include="$(RustProjectDir)/target/release/$(NativeLibPrefix)freedom_core$(NativeLibExt)" />
  </ItemGroup>

  <Target Name="CopyRustLib" AfterTargets="Build">
    <Copy SourceFiles="@(RustBinary)" DestinationFolder="$(OutputPath)" SkipUnchangedFiles="true" />
    <Copy SourceFiles="@(RustBinary)" DestinationFolder="$(PublishDir)" SkipUnchangedFiles="true" Condition="'$(PublishDir)' != ''" />
    
    <Message Importance="high" Text="=== Copied @(RustBinary) to $(OutputPath) ===" />
  </Target>
</Project>
